{
  "git": {
    "push": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md",
      "addVersionUrl": true,
      "addUnreleased": true,
      "strictLatest": true
    }
  },
  "hooks": {
    "before:git:release": "yarn prettier --write CHANGELOG.md && git add CHANGELOG.md"
  }
}
